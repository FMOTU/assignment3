<%- include('partials/header.ejs') %>
<%- include('partials/main_nav.ejs') %>
<!--This is the Edit page.-->
<div class ="container">
    <div class="row">
     <div class="col-md-offset-3 col-md-6">
         <h1><%= title %></h1>
         <from class="form" method="posy">
             
             <div class="form-group">
                 <label for="exerciseTextField">Exercise</label>
                 <input type ="text" class="form-control"
                 id ="exerciseTextField"
                 placeholder="Enter Exercise"
                 Exercise="Exercise" 
                 value="<%= workout.Exercise%>"
                 required>
             </div>
 
             <div class="form-group">
                 <label for="setsTextField">sets</label>
                 <input type ="text" class="form-control"
                 id ="setsTextField"
                 placeholder="Enter Sets"
                 Sets="Sets" 
                 value="<%= workout.Sets%>"
                 required>
             </div>
 
             <div class="form-group">
                 <label for="repsTextField">Reps</label>
                 <input type ="text" class="form-control"
                 id ="repsTextField"
                 placeholder="Enter Reps"
                 Reps="Reps" 
                 value="<%= workout.Reps%>"
                 required>
             </div>
 
             <div class="form-group">
                 <label for="intensityTextField">Intensity</label>
                 <input type ="text" class="form-control"
                 id ="intensityTextField"
                 placeholder="Enter Intensity"
                 Intensity="Intensity" 
                 value="<%= workout.Intensity%>"
                 required>
             </div>
 
             <div class="form-group">
                 <label for="liftedTextField">Lifted</label>
                 <input type ="text" class="form-control"
                 id = "liftedTextField"
                 placeholder="Enter Amount Lifted"
                 Lifted="Lifted" 
                 value="<%= workout.Lifted%>"
                 required>
             </div>
             
             <button class="btn-btn-primary" type="submit">
                 <i class="fas fa-edit"></i> Submit
             </button>
 
             <a href="/WorkoutList" class="btn btn-warning"
                 <i class="fas fa-undo"></i> Cancel</a>
         </from>
     </div>
    </div> 
 </div>




<%- include('partials/bottom_nav.ejs') %>
<%- include('partials/footer.ejs') %>